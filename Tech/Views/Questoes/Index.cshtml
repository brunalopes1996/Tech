@model IEnumerable<Tech.Models.Questoes>

@{
    ViewData["Title"] = "Lista de Questões";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Nova Questão</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Questão</th>
                <th>A</th>
                <th>B</th>
                <th>C</th>
                <th>D</th>
                <th>E</th>
                <th>Correta</th>
                <th>Questionário</th>
                <th>Imagem</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var questao in Model)
        {
            <tr>
                <td>@questao.Questao</td>
                <td>@questao.AlternativaA</td>
                <td>@questao.AlternativaB</td>
                <td>@questao.AlternativaC</td>
                <td>@questao.AlternativaD</td>
                <td>@questao.AlternativaE</td>
                <td>@questao.AlternativaCorreta</td>
                <td>@questao.Questionario.Nome</td>
                <td>
                    @if (!string.IsNullOrEmpty(questao.Imagem))
                    {
                        <img src="@questao.Imagem" alt="Imagem" width="100" />
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = questao.Id })" class="btn btn-sm btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = questao.Id })" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
