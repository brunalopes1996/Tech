@model Tech.Models.Questoes

@{
    ViewData["Title"] = "Questoes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Quest√µes</h1>
<h4 class="mb-4">Incluir</h4>

<div class="card my-4 border-dark border-2 rounded-1">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-8 col-lg-10">
                    <div class="mb-3">
                        <label asp-for="Questao" class="control-label"></label>
                        <input asp-for="Questao" class="form-control" />
                        <span asp-validation-for="Questao" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AlternativaA" class="control-label"></label>
                        <input asp-for="AlternativaA" class="form-control" />
                        <span asp-validation-for="AlternativaA" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AlternativaB" class="control-label"></label>
                        <input asp-for="AlternativaB" class="form-control" />
                        <span asp-validation-for="AlternativaB" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AlternativaC" class="control-label"></label>
                        <input asp-for="AlternativaC" class="form-control" />
                        <span asp-validation-for="AlternativaC" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AlternativaD" class="control-label"></label>
                        <input asp-for="AlternativaD" class="form-control" />
                        <span asp-validation-for="AlternativaD" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AlternativaE" class="control-label"></label>
                        <input asp-for="AlternativaE" class="form-control" />
                        <span asp-validation-for="AlternativaE" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AlternativaCorreta" class="control-label"></label>
                        <input asp-for="AlternativaCorreta" class="form-control" />
                        <span asp-validation-for="AlternativaCorreta" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-flex mt-4">
                <button type="submit" class="btn btn-outline-success me-2">
                    <i class="fas fa-save me-1"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-outline-danger">
                    <i class="fas fa-times me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script>
        document.querySelector("input[type='file']").addEventListener('change', function () {
            if (this.files && this.files[0]) {
                var img = document.getElementById("Preview");
                img.src = URL.createObjectURL(this.files[0]);
            }
        });
    </script>
}
