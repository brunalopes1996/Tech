@{
    ViewData["Title"] = "Histórico de Respostas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Histórico de Respostas</h2>

    <div class="mb-3">
        <a asp-action="Estatisticas" class="btn btn-primary">Ver Estatísticas</a>
    </div>

    @if (Model.Count() == 0)
    {
        <div class="alert alert-info">
            Você ainda não respondeu nenhuma questão.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Questionário</th>
                        <th>Questão</th>
                        <th>Alternativa Selecionada</th>
                        <th>Resultado</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Questionario.Nome</td>
                            <td>@item.Questao.Questao</td>
                            <td>@item.AlternativaSelecionada</td>
                            <td>
                                @if (item.Acertou)
                                {
                                    <span class="badge bg-success">Acerto</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Erro</span>
                                }
                            </td>
                            <td>@item.DataResposta.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
