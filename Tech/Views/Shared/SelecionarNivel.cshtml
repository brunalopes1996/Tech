@{
    ViewData["Title"] = "Selecionar Nível de Ensino";
}

<div class="container mt-5 text-center">
    <h2 class="mb-4">Escolha o Nível de Ensino</h2>
    <p class="lead mb-5">Selecione o nível para o qual deseja visualizar as questões.</p>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <img src="/img/Logo.png"class="card-img-top mx-auto mt-3" alt="Ensino Médio" style="width: 100px; height: 100px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Ensino Médio</h5>
                    <p class="card-text flex-grow-1">Questões voltadas para o nível médio de escolaridade.</p>
                    <a asp-action="ExibirQuestionario" asp-controller="Home" asp-route-nivelEnsino="Médio" class="btn btn-primary mt-auto">Selecionar Ensino Médio</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                 <img src="/img/Logo.png" class="card-img-top mx-auto mt-3" alt="Ensino Superior" style="width: 100px; height: 100px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Ensino Superior</h5>
                    <p class="card-text flex-grow-1">Questões voltadas para o nível superior de escolaridade.</p>
                    <a asp-action="ExibirQuestionario" asp-controller="Home" asp-route-nivelEnsino="Superior" class="btn btn-success mt-auto">Selecionar Ensino Superior</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card-img-top {
            object-fit: contain; /* Para garantir que a imagem não seja distorcida */
        }
        .card {
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: translateY(-5px);
        }
    </style>
}

